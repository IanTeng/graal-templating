{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
          "@/*": ["./*"]
      },
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck" : true,
      "lib": [
        "es2019",
        "dom"
      ]
    },
    "include" : [
        "./src/**/*", "tsconfig.json"
    ],
    "exclude" : [
        "./test/**/*"
    ]
  }
